{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/app/_components/*"],
      "@marketing/*": ["src/app/(marketing)/*"],
      "@marketing/components/*": ["src/app/(marketing)/_components/*"],
      "@cms/*": ["src/app/(cms)/*"],
      "@dashboard/*": ["src/app/dashboard/*"],
      "@lib/*": ["src/lib/*"],
      "@utils": ["src/lib/utils"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"],
      "@types/*": ["src/types/*"],
      "@inngest/*": ["src/inngest/*"],
      "@inngest/functions/*": ["src/inngest/functions/*"],
      "@store/*": ["src/store/*"],
      "@server/*": ["src/server/*"],
      "@helpers/*": ["src/helpers/*"]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "video.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
